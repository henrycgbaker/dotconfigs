# dotconfigs configuration
# Copy to .env and customize for your environment
# Re-run setup: dotconfigs setup <plugin>

# ============================================================================
# GIT PLUGIN - Identity
# ============================================================================

# Git user identity (applied globally)
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"

# ============================================================================
# GIT PLUGIN - Workflow Settings
# ============================================================================

# Core workflow settings
GIT_PULL_REBASE=true                     # Rebase instead of merge on pull
GIT_PUSH_DEFAULT=simple                  # Push current branch only
GIT_FETCH_PRUNE=true                     # Auto-delete removed remote branches
GIT_INIT_DEFAULT_BRANCH=main             # Default branch name for new repos

# Advanced workflow settings
GIT_RERERE_ENABLED=false                 # Reuse recorded conflict resolutions
GIT_DIFF_ALGORITHM=histogram             # Better diff output (optional)
GIT_HELP_AUTOCORRECT=10                  # Auto-run typo corrections after 1s (optional)

# ============================================================================
# GIT PLUGIN - Aliases
# ============================================================================

# Space-separated list of enabled aliases
GIT_ALIASES_ENABLED="unstage last lg amend undo wip"

# Alias definitions (defaults shown - customize if needed)
GIT_ALIAS_UNSTAGE="reset HEAD --"
GIT_ALIAS_LAST="log -1 HEAD"
GIT_ALIAS_LG="log --oneline --graph --all --decorate"
GIT_ALIAS_AMEND="commit --amend --no-edit"
GIT_ALIAS_UNDO="reset HEAD~1 --mixed"
GIT_ALIAS_WIP="commit -am 'WIP'"

# ============================================================================
# GIT PLUGIN - Hooks Configuration
# ============================================================================

# Hooks scope
GIT_HOOKS_SCOPE=project                  # Deploy per-project or global
GIT_HOOK_CONFIG_PATH=.githooks/config    # Config file location (project scope only)

# ----------------------------------------------------------------------------
# Pre-commit hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_PRE_COMMIT_ENABLED=true         # Enable pre-commit hook
GIT_HOOK_SECRETS_CHECK=true              # Block commits with secrets
GIT_HOOK_LARGE_FILE_CHECK=true           # Warn on large files
GIT_HOOK_LARGE_FILE_THRESHOLD=1048576    # Large file size (bytes, default 1MB)
GIT_HOOK_DEBUG_CHECK=true                # Check for debug statements
GIT_HOOK_DEBUG_CHECK_STRICT=false        # Block (true) or warn (false) on debug

# ----------------------------------------------------------------------------
# Commit-msg hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_COMMIT_MSG_ENABLED=true         # Enable commit-msg hook
GIT_HOOK_BLOCK_AI_ATTRIBUTION=true       # Block AI attribution in commits
GIT_HOOK_WIP_BLOCK_ON_MAIN=true          # Block WIP commits on main branch
GIT_HOOK_CONVENTIONAL_COMMITS=true       # Validate conventional commit format
GIT_HOOK_CONVENTIONAL_COMMITS_STRICT=false  # Block (true) or warn (false)
GIT_HOOK_MAX_SUBJECT_LENGTH=72           # Maximum subject line length

# ----------------------------------------------------------------------------
# Pre-push hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_PRE_PUSH_ENABLED=true           # Enable pre-push hook
GIT_HOOK_BRANCH_PROTECTION=warn          # Protect main/master: block, warn, off

# ----------------------------------------------------------------------------
# Prepare-commit-msg hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_PREPARE_COMMIT_MSG_ENABLED=true # Enable prepare-commit-msg hook
GIT_HOOK_BRANCH_PREFIX=true              # Auto-prefix commit with branch name

# ----------------------------------------------------------------------------
# Post-merge hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_POST_MERGE_ENABLED=true         # Enable post-merge hook
GIT_HOOK_DEPENDENCY_CHECK=true           # Check for dependency changes
GIT_HOOK_MIGRATION_REMINDER=true         # Remind about pending migrations

# ----------------------------------------------------------------------------
# Post-checkout hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_POST_CHECKOUT_ENABLED=true      # Enable post-checkout hook
GIT_HOOK_BRANCH_INFO=true                # Display branch info on checkout

# ----------------------------------------------------------------------------
# Post-rewrite hook settings
# ----------------------------------------------------------------------------
GIT_HOOK_POST_REWRITE_ENABLED=true       # Enable post-rewrite hook

# ============================================================================
# CLAUDE PLUGIN - Hook Configuration
# ============================================================================

# PreToolUse hook settings
CLAUDE_HOOK_DESTRUCTIVE_GUARD=true       # Guard against destructive commands
CLAUDE_HOOK_FILE_PROTECTION=true         # Protect critical files

# PostToolUse hook settings
CLAUDE_HOOK_RUFF_FORMAT=true             # Auto-format Python with Ruff

# ============================================================================
