# dotconfigs configuration
# ======================
# This file documents all available configuration keys.
# Copy to .env and customise, or run: dotconfigs setup <plugin>

# ============================================================================
# VERSION
# ============================================================================
# Configuration schema version â€” used for auto-migration between versions
# Current version: 2.0
DOTCONFIGS_VERSION=2.0

# ============================================================================
# CLAUDE PLUGIN
# ============================================================================
# Manages Claude Code configuration: settings.json, CLAUDE.md, hooks, skills

# Deploy target directory (where Claude config lives)
# Default: ~/.claude
CLAUDE_DEPLOY_TARGET=~/.claude

# Enable/disable settings.json deployment
# Settings.json controls file permissions, command allow/deny, and hooks
# Values: true | false
# Default: true
CLAUDE_SETTINGS_ENABLED=true

# CLAUDE.md sections to include (space-separated list)
# Available sections discovered from plugins/claude/templates/claude-md/
# Examples: 01-communication 02-simplicity 03-documentation 04-git 05-code-style
# Default: all sections enabled
CLAUDE_MD_SECTIONS="01-communication 02-simplicity 03-documentation 04-git 05-code-style"

# Claude Code hooks to deploy (space-separated list)
# Hooks are Python scripts in plugins/claude/hooks/
# Available: post-tool-format.py (runs Ruff on Python Write/Edit)
# Default: all hooks enabled
CLAUDE_HOOKS_ENABLED="post-tool-format"

# Skills (custom commands) to deploy (space-separated list)
# Skills are markdown files in plugins/claude/commands/
# Available: commit squash-merge simplicity-check pr-review
# Default: all skills enabled
CLAUDE_SKILLS_ENABLED="commit squash-merge simplicity-check pr-review"

# Install Get Shit Done framework
# GSD provides project planning agents (/plan, /execute, etc.)
# Values: true | false
# Default: false
CLAUDE_GSD_INSTALL=false

# Git identity (deployed via Claude plugin)
# DEPRECATED: Use GIT_USER_NAME and GIT_USER_EMAIL instead
# These keys exist for backwards compatibility only
CLAUDE_GIT_USER_NAME=""
CLAUDE_GIT_USER_EMAIL=""

# ============================================================================
# GIT PLUGIN
# ============================================================================
# Manages Git configuration: identity, workflow, aliases, hooks

# ----------------------------------------------------------------------------
# Identity
# ----------------------------------------------------------------------------

# Global git user.name (required for commits)
GIT_USER_NAME="Your Name"

# Global git user.email (required for commits)
GIT_USER_EMAIL="your.email@example.com"

# ----------------------------------------------------------------------------
# Workflow Settings
# ----------------------------------------------------------------------------

# Rebase on pull instead of merge
# Values: true | false
# Default: true
GIT_PULL_REBASE=true

# Push only current branch (not all matching branches)
# Values: simple | current | matching | upstream
# Default: simple (push current branch to upstream with same name)
GIT_PUSH_DEFAULT=simple

# Auto-delete remote-tracking branches when remote is deleted
# Values: true | false
# Default: true
GIT_FETCH_PRUNE=true

# Default branch name for new repositories
# Common values: main | master
# Default: main
GIT_INIT_DEFAULT_BRANCH=main

# Reuse recorded conflict resolutions (git rerere)
# Values: true | false
# Default: false (opt-in)
GIT_RERERE_ENABLED=false

# Diff algorithm for better output
# Values: myers | minimal | patience | histogram
# Default: unset (uses git default 'myers')
# Recommended: histogram (better diffs for code)
GIT_DIFF_ALGORITHM=histogram

# Auto-run typo corrections after delay
# Value: deciseconds (10 = 1 second)
# Default: unset (no autocorrect)
# Example: 10 (auto-run correction after 1 second)
GIT_HELP_AUTOCORRECT=10

# ----------------------------------------------------------------------------
# Aliases
# ----------------------------------------------------------------------------

# Enabled aliases (space-separated list)
# Format: alias-name alias-name ...
# Custom aliases also listed here
# Default: unstage last lg amend undo wip
GIT_ALIASES_ENABLED="unstage last lg amend undo wip"

# Built-in alias definitions
# Override by setting GIT_ALIAS_<NAME> with custom command

# Unstage files
GIT_ALIAS_UNSTAGE="reset HEAD --"

# Show last commit
GIT_ALIAS_LAST="log -1 HEAD"

# Pretty log graph
GIT_ALIAS_LG="log --oneline --graph --all --decorate"

# Amend last commit without editing message
GIT_ALIAS_AMEND="commit --amend --no-edit"

# Undo last commit (keep changes unstaged)
GIT_ALIAS_UNDO="reset HEAD~1 --mixed"

# Quick work-in-progress commit
GIT_ALIAS_WIP="commit -am \"WIP\""

# Custom aliases
# Add your own aliases using GIT_ALIAS_<NAME> format
# Example:
# GIT_ALIAS_FIXUP="commit --fixup HEAD"
# (Remember to add 'fixup' to GIT_ALIASES_ENABLED)

# ----------------------------------------------------------------------------
# Hooks
# ----------------------------------------------------------------------------

# Hooks deployment scope
# Values: project | global
# Default: project (deploy hooks per-repository via dotconfigs project git)
# Warning: global scope sets core.hooksPath, overriding ALL per-project hooks
GIT_HOOKS_SCOPE=project

# Pre-push protection level
# Values: warn | block | off
# Default: warn
# - warn: show warning but allow force-push to protected branches
# - block: prevent force-push to main/master entirely
# - off: no pre-push checks
GIT_HOOK_PREPUSH_PROTECTION=warn

# Enforce conventional commit messages
# Values: true | false
# Default: true
# Format: type(scope): description
# Types: feat, fix, docs, refactor, test, chore, perf, style
GIT_HOOK_CONVENTIONAL_COMMITS=true
