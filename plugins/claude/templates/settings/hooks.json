{
  "hooks": {
    "PreToolUse": [
      {
        "matchers": [
          { "tool_name": "Bash" }
        ],
        "command": ".claude/hooks/block-destructive.sh",
        "timeout": 10000
      },
      {
        "matchers": [
          { "tool_name": "Write" },
          { "tool_name": "Edit" }
        ],
        "command": ".claude/hooks/block-destructive.sh",
        "timeout": 10000
      }
    ],
    "PostToolUse": [
      {
        "matchers": [
          { "tool_name": "Write" },
          { "tool_name": "Edit" }
        ],
        "command": ".claude/hooks/post-tool-format.py",
        "timeout": 30000
      }
    ]
  }
}
